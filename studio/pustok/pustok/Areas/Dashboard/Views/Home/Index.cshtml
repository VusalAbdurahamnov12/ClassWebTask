@model List<Slider>
@{
    ViewData["Title"] = "Index";
    int order = 0;
}

<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Tables</h1>
        <a asp-action="Create" asp-controller="Home" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Title1</th>
                <th scope="col">Title2</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var slider in Model)
            {
                order++;
                <tr>
                    <th scope="row">@order</th>
                    <td>@slider.SliderTitle1</td>
                    <td>@slider.SliderTitle2</td>
                    <td>@slider.Description</td>
                    <td><img src="~/image/bg-images/@slider.Image" style="max-width:100px" /></td>
                    <td>
                        <a asp-action="Update" asp-controller="Home" asp-route-id="@slider.Id" class="btn btn-warning">Edit</a>
                        <a type="submit" asp-action="Delete" asp-controller="Home" asp-route-id="@slider.Id" class="btn btn-danger btn-sweet-delete">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>